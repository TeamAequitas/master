<Window x:Class="PathFinderHelper.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathFinderHelper"
        mc:Ignorable="d"
        Title="SubWindow" Height="300" Width="300">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="auto" Name="scroller" HorizontalScrollBarVisibility="auto" VerticalScrollBarVisibility="Auto" >
            <Grid Name="Test" Height="auto" Width="auto">
                <UniformGrid Name="UniGrid" />
            </Grid>
        </ScrollViewer>

        <Button x:Name="GenerateMatrix" Content="Generate" HorizontalAlignment="right" Height="22" Margin="0,0,5,5" VerticalAlignment="bottom" Width="65" Click="GenerateMatrix_Click"/>
    </Grid>
</Window>
